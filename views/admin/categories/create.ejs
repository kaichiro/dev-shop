<% include ../header.ejs %>

<!-- ========================= SECTION PAGETOP ========================= -->
<section class="section-pagetop bg-primary">
    <div class="container clearfix">
        <h2 class="title-page">Admin</h2>
        <nav class="float-left">
            <ol class="breadcrumb text-white">
                <li class="breadcrumb-item"><a href="/">Home</a></li>
            </ol>
        </nav>
    </div> <!-- container //  -->
</section>
<!-- ========================= SECTION INTRO END// ========================= -->

<!-- ========================= SECTION CONTENT ========================= -->
<section class="section-content bg padding-y">
    <div class="container">
        <div class="row">
            <main class="col-sm-12">

                <div class="card">
                    <header class="card-header">
                        <h4 class="card-title mt-2">Nova Categoria</h4>
                    </header>
                    <article class="card-body">
                        <form method="post">
                            <div class="col form-group">
                                <label for="category">Categoria</label>
                                <input class="form-control" type="text" placeholder="Informe aqui o nome da categoria" id="category" name="category">
                            </div>
                            <div class="col form-group">
                                <label for="description">Descrição</label>
                                <textarea class="form-control" placeholder="Informe aqui uma descrição para a categoria" id="description" name="description"></textarea>
                            </div>
                            <div class="form-group">
                                <button class="btn btn-primary btn-block" type="submit">Criar categoria</button>
                            </div>
                        </form>
                    </article> <!-- card-body end .// -->
                </div> <!-- card.// -->

            </main> <!-- col.// -->
        </div>
    </div> <!-- container .//  -->
</section>
<!-- ========================= SECTION CONTENT END// ========================= -->

